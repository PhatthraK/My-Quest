<body class="md:p-12 lg:p-16">

    <!-- Main Container -->
    <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl p-6 md:p-10 lg:p-12 border-4 border-gray-900">
        
        <!-- Header Section -->
        <div class="text-center mb-10">
