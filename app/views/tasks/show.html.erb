<div class="max-w-xl mx-auto p-8 bg-white rounded-xl shadow-lg border-4 border-gray-900 mt-12">
  <h1 class="text-3xl font-bold mb-6">Quest Details</h1>

  <div class="mb-6">
    <p class="text-lg">
      <strong>Description:</strong>
      <%= @task.description %>
    </p>
    <p class="text-lg mt-2">
      <strong>Status:</strong>
      <%= @task.completed? ? 'Completed' : 'In Progress' %>
    </p>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to "Back", tasks_path, class: "px-6 py-3 border-2 border-gray-900 text-gray-900 font-bold rounded-full hover:bg-gray-200 transition-colors duration-200" %>
    <%= link_to "Edit", edit_task_path(@task), class: "px-6 py-3 bg-gray-900 text-white font-bold rounded-full hover:bg-gray-700 transition-colors duration-200" %>
  </div>
</div>